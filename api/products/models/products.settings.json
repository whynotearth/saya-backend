{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
      "name": "Products"
    },
    "options": {
      "increments": true,
      "timestamps": true
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true
      },
      "description": {
        "type": "richtext"
      },
      "categories": {
        "collection": "categories",
        "via": "products",
        "dominant": true
      },
      "image": {
        "collection": "file",
        "via": "related",
        "allowedTypes": [
          "images",
          "videos"
        ],
        "plugin": "upload",
        "required": true
      },
      "checkout_trigger": {
        "type": "string",
        "default": "#",
        "unique": true
      },
      "short_description": {
        "type": "richtext"
      },
      "price": {
        "type": "decimal",
        "required": true
      },
      "weight": {
        "type": "decimal",
        "required": true
      },
      "stock": {
        "required": true,
        "type": "integer"
      },
      "sku": {
        "type": "string",
        "unique": true
      },
      "special_instructions": {
        "type": "boolean",
        "default": false,
        "required": true
      },
      "allow_multiple": {
        "type": "boolean",
        "default": true,
        "required": true
      },
      "max_quantity": {
        "type": "integer"
      },
      "visible": {
        "type": "boolean",
        "required": true
      },
      "request_address": {
        "type": "boolean",
        "default": true,
        "required": true
      },
      "variations": {
        "collection": "variations",
        "via": "product"
      },
      "add_ons": {
        "via": "product",
        "collection": "attributes"
      }
    }
  }