{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Menu Item"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "categories": {
      "collection": "categories",
      "via": "products",
      "dominant": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "short_description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "special_instructions": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "visible": {
      "type": "boolean",
      "required": true
    },
    "variations": {
      "collection": "variations",
      "via": "product"
    },
    "add_ons": {
      "via": "product",
      "collection": "attributes"
    },
    "offers": {
      "collection": "offer",
      "via": "products"
    }
  }
}
