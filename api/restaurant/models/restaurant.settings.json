{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "name": "restaurants"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "categories",
      "via": "restaurants",
      "dominant": true
    },
    "restaurant_hours": {
      "type": "component",
      "repeatable": true,
      "component": "hours.hours-of-operation",
      "required": true
    },
    "offers": {
      "collection": "offer",
      "via": "restaurants"
    },
    "Meta": {
      "type": "component",
      "repeatable": true,
      "component": "restaurants.meta"
    },
    "Content": {
      "type": "dynamiczone",
      "components": [
        "restaurants.meta"
      ]
    },
    "Delivery_time": {
      "type": "integer"
    },
    "Delivery_fee": {
      "type": "integer"
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "vegetarian",
        "vegan",
        "spicey",
        "plastic_free",
        "gluten_free",
        "dairy_free",
        "cambodian_owned"
      ]
    }
  }
}
